{% extends "IsssrCoreBundle::base.html.twig" %}

{% block stylesheets %}
<style type="text/css">

	body {
        		padding-top: 40px; 
      		}
      .container {
        width: 300px;
      }

      /* The white background content wrapper */
      .container > .content {
      width: 300px;
        background-color: #fff;
        padding: 20px;
        margin: 0 -20px; 
        -webkit-border-radius: 10px 10px 10px 10px;
           -moz-border-radius: 10px 10px 10px 10px;
                border-radius: 10px 10px 10px 10px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.15);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.15);
                box-shadow: 0 1px 2px rgba(0,0,0,.15);
      }

      .login-form {
		margin-left: 24px;
	  }
	  
	  .clearfix {
	  	padding-top:10px;
	  }
    </style>
{% endblock stylesheets %}
{% block body %}
{% if error %}
    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}
<div class="container">
<div class="content">
			<div class="row">
				<div class="login-form">
					<h2>Login</h2>
					<form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
					    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
						<fieldset>
							<div class="clearfix">
					   			<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Username"/>
					  		</div>
							<div class="clearfix">
								<input type="password" id="password" name="_password" required="required" placeholder="Password"/>
					  		</div>
					  		<div class="clearfix">
					    		<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
					    		Remember me
							</div>
							<div class="clearfix">
					    		<button class="btn btn-primary" type="submit">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
					    	</div>
					    </fieldset>
					</form>
				</div>
			</div>
		</div>
</div>
{% endblock body %}