{% extends 'IsssrCoreBundle::layout.html.twig' %}

{% block pagetitle %}Strategy{% endblock %}
 
{% block content %}
    <button style="float:left; margin-bottom: 12px;" class="btn btn-small" onClick="javascript:history.back()">
        <i class="icon-circle-arrow-left"></i> Back
    </button>
<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
        	<th>Actions</th>
        	<td>
        		<a role="button" class="btn" href="{{ path('strategy_edit', { 'id': entity.id }) }}">
            		Edit
        		</a>
        		<form action="{{ path('strategy_delete', { 'id': entity.id }) }}" method="post">
            	{{ form_widget(delete_form) }}
            		<button class="btn btn-danger" type="submit">Delete</button>
        		</form>
        	</td>
        </tr>
    </tbody>
</table>


{% endblock %}
