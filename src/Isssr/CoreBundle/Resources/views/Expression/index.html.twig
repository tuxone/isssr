{% extends 'IsssrCoreBundle::layout.html.twig' %}

{% block pagetitle %}Expressions for Goal {{goal.title}}{% endblock %}
 
{% block content %}

<table class="records_list">
    <thead>
        <tr>
            <th>Expression</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            
            <td>{{ entity.expression }}</td>
			<td>
            	<a href="{{ path('expression_show', { 'id': entity.id }) }}">show</a>
            </td>

        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
        <a href="{{ path('expression_new', { 'id': goal.id }) }}">
            New
        </a>
</ul>

{% endblock %}
