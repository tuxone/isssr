{% extends 'IsssrCoreBundle::layout.html.twig' %}

{% block pagetitle %}New Goal{% endblock %}
 
{% block content %}

{% if father == null %}
<form action="{{ path('goal_create') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <p>
        <button type="submit">Create</button>
    </p>
</form>
{% else  %}
<form action="{{ path('goal_createSon', { 'id': father.id }) }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <p>
        <button type="submit">Create</button>
    </p>
</form>
{% endif %}
{% endblock %}