{% extends 'IsssrCoreBundle::layout.html.twig' %}

{% block pagetitle %}Goals{% endblock %}
 
{% block content %}


<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Priority</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('goal_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.priority }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('goal_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    {% if entity.owner == user %}
	                    <li>
	                        <a href="{{ path('goal_edit', { 'id': entity.id }) }}">edit</a>
	                    </li>
	                {% endif %}
                    <li>
                        <a href="{{ path('goal_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                    <li>
                        <a href="{{ path('superingoal', { 'id': entity.id }) }}">supers</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

        <a href="{{ path('goal_new') }}">
            Create a new goal
        </a>


{% endblock %}