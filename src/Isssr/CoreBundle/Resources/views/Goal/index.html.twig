{% extends 'IsssrCoreBundle::layout.html.twig' %}

{% block pagetitle %}Goals{% endblock %}
 
{% block content %}


<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>Priority</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.title }}</td>
            <td>{{ entity.description }}</td>
            <td>
            	{{ entity.getStatusString() }}
            
            </td>
            <td>{{ entity.priority }}</td>
            <td>
				<a class="btn btn-small btn-primary" href="{{ path('goal_show', { 'id': entity.id }) }}">show</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

        <a href="{{ path('goal_new') }}">
            Create a new goal
        </a>


{% endblock %}