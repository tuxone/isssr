{% extends 'IsssrCoreBundle::layout.html.twig' %}

{% block pagetitle %}Search Results{% endblock %}
 
{% block content %}

 {% if length > 0 %}
	<table class="table">
	    <thead>
	        <tr>
	        	<th>Id</th>
	            <th>Title</th>
	            <th>Description</th>
	            <th>Tags</th>
	            <th>Actions</th>
	        </tr>
	    </thead>
	    <tbody>
	   
		    {% for goal in goals %}
		        <tr>
		        	<td>{{ goal.id }}</td>
		            <td>{{ goal.title }}</td>
		            <td>{{ goal.description }}</td>
		            <td>
						{% for tag in goal.tags %}
							<ul>{{ tag }}</ul>
						{% endfor %}
		            </td>
		            <td><a class="btn btn-small btn-primary" href="{{ path('goal_show', { 'id': goal.id }) }}">show</a></td>
		        </tr>
		    {% endfor %}
		</tbody>
	</table>
{% else %}
		No Goals Found
{% endif %}


{% endblock %}