{% extends 'IsssrCoreBundle::layout.html.twig' %}

{% block pagetitle %}Tag{% endblock %}
 
{% block content %}
<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ entity.title }}</td>
        </tr>
    </tbody>
</table>

<table>
	<tr>
		<td>
        <a href="{{ path('tag') }}">
            <button>Back</button>
        </a>
		</td>
		<td>
        {% if entity.creator == user %}
	        <a href="{{ path('tag_edit', { 'id': entity.id }) }}">
	            <button>Edit</button>
	        </a>
		{% endif %}
		</td>
		<td>
        {% if entity.creator == user %}
        	{%  if entity.status > 0  %}
		        <form action="{{ path('tag_delete', { 'id': entity.id }) }}" method="post" style="display: inline">
		            {{ form_widget(delete_form) }}
		            <button type="submit">Delete</button>
		        </form>
		    {%  endif %}
        {% endif %}
        </td>
	</tr>
</table>

{% endblock %}
