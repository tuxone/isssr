{% extends 'IsssrCoreBundle::layout.html.twig' %}

{% block pagetitle %}Tags{% endblock %}
 
{% block content %}

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Creator</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('tag_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.creator }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('tag_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    {% if entity.creator == user %}
                   		<li>
                        	<a href="{{ path('tag_edit', { 'id': entity.id }) }}">edit</a>
                    	</li>
                    {% endif %}
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>


        <a href="{{ path('tag_new') }}">
            Create a new entry
        </a>


{% endblock %}
